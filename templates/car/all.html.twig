{% extends 'default/base.html.twig' %}

{% block title %}Car index{% endblock %}

{% block javascripts %}
<script type="text/javascript" src="https://cdn.datatables.net/v/bs5/jq-3.6.0/dt-1.13.1/datatables.min.js"></script>
{% endblock %}

{% block body %}
<!-- Masthead-->
<header class="masthead bg-secondary text-white text-center">
    <div class="container d-flex align-items-center flex-column">
        <!-- Masthead Heading-->
        <h1 class="masthead-heading text-uppercase mb-0">MANAGE CARS</h1>
        <!-- Icon Divider-->
        <div class="divider-custom divider-light">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
            <div class="divider-custom-line"></div>
        </div>
        <!-- Masthead Subheading-->
        <p class="masthead-subheading font-weight-light mb-0">Here is car's dashboard</p>
    </div>
</header>
<section class="page-section portfolio bg-second" id="portfolio">
    <div class="container">
        <!-- Add a new car-->
        <div class="text-center">
            <a class="btn btn-outline-secondary text-uppercase btn-lg mx-auto" href="{{ path('app_car_new') }}">Create
                new</a>
        </div>
        <!-- Car table-->
        <div class="card shadow my-5">
            <div class="card-header bg-secondary py-3">
                <h4 class="m-0 font-weight-bold text-white">Car List</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="dataTable table table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th class="text-center">Category</th>
                                <th class="text-center">Name</th>
                                <th class="text-center">NbDoors</th>
                                <th class="text-center">NbSeats</th>
                                <th class="text-center">Cost</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th class="text-center">Category</th>
                                <th class="text-center">Name</th>
                                <th class="text-center">NbDoors</th>
                                <th class="text-center">NbSeats</th>
                                <th class="text-center">Cost</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            {% for car in cars %}
                            <tr>
                                <td class="text-uppercase">{{ car.carCategory.name }}</td>
                                <td class="text-center">{{ car.name }}</td>
                                <td class="text-center">{{ car.nbDoors }}</td>
                                <td class="text-center">{{ car.nbSeats }}</td>
                                <td class="text-center">{{ car.cost }} â‚¬</td>
                                <td class="align-middle text-center">
                                    <div class="d-flex justify-content-center">
                                        <a class="btn btn-outline-success me-3"
                                            href="{{ path('app_car_show', {'id': car.id}) }}">Show</a>
                                        <a class="btn btn-outline-warning me-3"
                                            href="{{ path('app_car_edit', {'id': car.id}) }}">Edit</a>
                                        <form method="post" action="{{ path('app_car_delete', {'id': car.id}) }}"
                                            onsubmit="return confirm('Are you sure you want to delete this item?');">
                                            <input type="hidden" name="_token"
                                                value="{{ csrf_token('delete' ~ car.id) }}">
                                            <button class="btn btn-outline-danger">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="6">no records found</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock %}